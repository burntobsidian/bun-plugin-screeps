{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"outDir": "dist",
		"rootDir": "src",
		"declaration": true,
		"declarationMap": false,
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"strict": true,
		"esModuleInterop": false
	},
	"include": ["src/**/*"]
}
